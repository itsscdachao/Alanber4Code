<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="translate_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/view_fade_in</item>
        <item name="android:windowExitAnimation">@anim/view_fade_out</item>
    </style>

    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="btn_style_done_new" parent="@style/btn_style_parent">
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:background">@drawable/btn_selector_done</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="btn_style_parent">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
